<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookSwipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/swipeLayout2">

            <ImageView
                android:id="@+id/bookPic"
                android:layout_width="match_parent"
                android:layout_height="532dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/book" />

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Midnight Library"
                android:textColor="@color/black"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/bookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Matt Haig"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/lblDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="....."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lblGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Genres:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtGeneres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lblYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Published Year:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>